<div class="mt-5">
    <div class="row">
        {{#each blogs}}
            <div class="col-sm-6 col-lg-4">
                <div class="card  blogs-items">
                    <img src="{{this.img}}" class="card-img-top" alt="{{this.name}}">
                    <div class="card-body">
                        <a href="/blogs/{{this.slug}}"> <h5 class="card-title">{{this.name}}</h5></a>
                       
                        <p class="card-text">{{this.description}}</p>
                        <a href="/blogs/{{this.slug}}" class="btn btn-primary">Detail</a>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
</div>